med_receitas="MedicamentosReceitas.txt"

def menu():
    print("╔══════════════════════════════════════════════════════════╗")  
    print("║  1 - INSERIR NOVO FUNCIONARIO                            ║")                          
    print("║  2 - INSERIR MEDICAMENTOS                                ║")
    print("║  3 - VERIFICAR SE ESSE MEDICAMENTO NECESSITA DE RECEITA  ║")
    print("║  4 - ALTERAR STATUS DE RECEITA DO MEDICAMENTO            ║")
    print("║  5 - EXCLUIR MEDICAMENTO DO ESTOQUE                      ║")
    print("║  6 - SAIR                                                ║")
    print("╠══════════════════════════════════════════════════════════╣")
    print("║  DIGITE A OPÇÃO DESEJADA:                                ║")
    print("╚══════════════════════════════════════════════════════════╝")          
 
def add_func():
    cond="s"
    codigo=0
    while cond=="s" or cond=="S":
        arq = open("Cadastro.txt", "a")
        funcionario=input("DIGITE SEU NOME: ")
        codigo=codigo+1
        print("%s;%s" % (codigo,funcionario), file = arq)
        print("FUNCIONARIO CADASTRADO COM CODIGO %s" %codigo)
        cond=input("DESEJA CADASTRAR UM NOVO FUNCIONARIO? [S/N] ")
        arq.close()
        
def add_medicamento():
    cond = "s"
    while cond == "s" or cond == "S":
        medicamento = input("DIGITE O MEDICAMENTO: ")
        receita = input("ESSE MEDICAMENTO PRECISA DE RECEITA? [S/N] ")
        arq = open ("Estoque.txt","a")
        print (medicamento,file = arq)
        if receita == "s" or receita == "S":
            medicamento_receita(medicamento)
        else:
            medicamento_sem_receita(medicamento)
        cond = input("DESEJA ADICIONAR UM NOVO MEDICAMENTO? [S/N] ")
        arq.close()

def medicamento_receita(medicamento):
    arq = open(med_receitas, "a")
    print (medicamento,file = arq)
    print("MEDICAMENTO COM RECEITA ADICIONADO!")
    arq.close()

def medicamento_sem_receita(medicamento):
    arq = open("MedicamentosSemReceita.txt","a")
    print (medicamento,file = arq)     
    print("MEDICAMENTO SEM RECEITA ADICIONADO!")
    arq.close()

def verificação():
    continua="s"
    while continua=="s" or continua=="S":
        medicamento=input("QUAL MEDICAMENTO DESEJA VERIFICAR?\n")
        arq = open(med_receitas, "r")
        medicamentos=[medicamento.strip() for medicamento in arq]
        if medicamento in medicamentos:
            print("ESTE MEDICAMENTO PRECISA DE RECEITA!!\n")
        else:
            print("ESTE MEDICAMENTO NÃO PRECISA DE RECEITA!!\n")
        arq.close()
        continua = input("DESEJA VERIFICAR OUTRO MEDICAMENTO? [S/N]")
        
def verificação2(medicamento):
    arq = open(med_receitas, "r")
    medicamentos=[medicamento.strip() for medicamento in arq]
    if medicamento in medicamentos:
        return True
    else:
        return False
        
def alterar():
    medicamento=input("QUAL MEDICAMENTO VOCÊ DESEJA ALTERAR A RECEITA: ")
    verif=verificação2(medicamento)
    if verif==True:
        cond=input("ESTE MEDICAMENTO POSSUI RECEITA, DESEJA ALTERAR PRA OS MEDICAMENTOS QUE NÃO PRECISAM? [S/N]")
        if cond=="s" or cond=="S":
            medicamento_sem_receita(medicamento)
            apagar_diferente(medicamento)
                
                
