def apagar_diferente(medicamento):
    arq = open("MedicamentosReceitas.txt", "w")
    lista=arq.readlines()
    for i in lista:
        if medicamento==i:
            print(end = "")
        else:
            print(medicamento, file=nomedoarquivo)
    

        
continua="True"
while continua:
    menu()
    opcao = input()
    if opcao == "1":
        add_func()
    if opcao == "2":
        add_medicamento()
    if opcao == "3":
        verificação()
    if opcao == "4":
        alterar()
    if opcao == "5":

    if opcao == "6":
        continua=False
